{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "backend",
        "admin",
        "mobile",
        "shared",
        "user",
        "auth",
        "product",
        "order",
        "inventory",
        "warehouse",
        "delivery",
        "marketing",
        "member",
        "address",
        "deps",
        "config"
      ]
    ]
  }
}